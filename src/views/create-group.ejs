<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trăn khìn</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload">Upload File</a>
    </div>
    <form action="/logout?_method=DELETE" method="POST">
        <button type="submit">Log Out</button>
    </form>

    <h1>Group Detail - hello <%=userId %>
    </h1>
    <div class="create-user-container">
        <form action="/create-group" method="POST">
            <div><b>Tạo group công tác: </b></div>
            <div id="group_id">
                <label>Group ID: </label>
                <input type="text" name="group_id" value=<%=groupId %> style='width:15%;' disabled>
            </div>
            <div>
                <div style="display:inline-block; padding-right: 2%"><label>Thời gian dự kiến bắt đầu: </label>
                    <input type="datetime-local" name="schedule_start" required>
                </div>
                <div style="display:inline-block;">
                    <label>Thời gian dự kiến kết thúc: </label>
                    <input type="datetime-local" name="schedule_finish" required>
                </div>
            </div>
            <div>
                <label>Đơn vị: </label>
                <input type="text" name="crew" required style='width:15%;'>
            </div>
            <div>
                <label>Trạm/NM: </label>
                <input type="text" name="station" required style='width:15%;'>
            </div>
            <div>
                <label>Phần tử công tác: </label>
                <textarea type="text" name="element" wrap="soft" style='width:20%; height:10%; word-break: break-word'
                    required></textarea>
            </div>
            <div>
                <label>Nội dung công tác: </label>
                <textarea type="text" name="content" wrap="soft" style='width:20%; height:10%; word-break: break-word'
                    required></textarea>
            </div>
            <div>
                <label>PTT: </label>
                <input type="text" name="ptt" required style='width:15%;'>
            </div>
            <div>
                <button type="submit" class="btn-submit">Submit</button>
            </div>
        </form>
    </div>
    <img src="/img/tran.jpg" width="50%" class="center" />
</body>

</html>